<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<parameters>
		<parameter id="name" description="Widget Name" option_name="name" variable_name="$PARAM_WIDGET_NAME" required="true"/>
		<parameter id="alias" description="Widget Alias" option_name="alias" variable_name="$PARAM_WIDGET_ALIAS" required="true"/>
		<parameter id="description" description="Widget Description" option_name="desc" variable_name="$PARAM_WIDGET_DESCRIPTION" required="false"/>
		<parameter id="version" description="Widget Version" option_name="vers" variable_name="$PARAM_WIDGET_VERSION" required="false"/>
		<parameter id="date" description="Widget Date" option_name="date" variable_name="$PARAM_WIDGET_DATE" required="false"/>
		<parameter id="author_name" description="Author Name" option_name="author-name" variable_name="$PARAM_WIDGET_AUTHOR_NAME" required="false"/>
		<parameter id="author_url" description="Author URL" option_name="author-url" variable_name="$PARAM_WIDGET_AUTHOR_URL" required="false"/>
		<parameter id="author_email" description="Author Email" option_name="author-email" variable_name="$PARAM_WIDGET_AUTHOR_EMAIL_ADDRESS" required="false"/>
	</parameters>
	<folders>
		<folder relative_path="./conf"/>
		<folder relative_path="./queries"/>
		<folder relative_path="./skins"/>
		<folder relative_path="./skins/default"/>
		<folder relative_path="./skins/default/css"/>
		<folder relative_path="./skins/default/filter"/>
		<folder relative_path="./skins/default/img"/>
		<folder relative_path="./skins/default/js"/>
	</folders>
	<files>
		<file relative_path="./conf/info.xml">
			<param id="alias"/>
			<param id="version"/>
			<param id="date"/>
			<param id="author_name"/>
			<param id="author_url"/>
			<param id="author_email"/>
		</file>
		<file relative_path="./queries/getChromeBrowser.xml">
			<param id="alias"/>
		</file>
		<file relative_path="./queries/getFirefoxBrowser.xml">
			<param id="alias"/>
		</file>
		<file relative_path="./queries/getIEBrowser.xml">
			<param id="alias"/>
		</file>
		<file relative_path="./queries/getOtherBrowsers.xml">
			<param id="alias"/>
		</file>
		<file relative_path="./skins/default/css/widget.css">
			<param id="alias"/>
		</file>
		<file relative_path="./skins/default/template.html" replace_file_name_with_param_id="name">
		</file>
		<file relative_path="./skins/default/skin.xml">
			<param id="alias"/>
			<param id="name"/>
			<param id="version"/>
			<param id="date"/>
			<param id="author_name"/>
			<param id="author_url"/>
			<param id="author_email"/>
		</file>
		<file relative_path="./template.class.php" replace_file_name_with_param_id="name">
			<param id="name"/>
			
			<param id="description"/>
			<param id="version"/>
			<param id="author_name"/>
			<param id="author_email"/>
		</file>
	</files>
</templates>