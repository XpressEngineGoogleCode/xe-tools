<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/XEMOBILE_ADDPAGE_PAGETYPESPINNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/page_types" />

    <EditText
        android:id="@+id/XEMOBILE_ADDPAGE_PAGENAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newpage_page_name" />

    <EditText
        android:id="@+id/XEMOBILE_ADDPAGE_BROWSERTITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newpage_browser_title" />

    <EditText
        android:id="@+id/XEMOBILE_ADDPAGE_CACHING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newpage_caching_time" />

    <Spinner
        android:id="@+id/XEMOBILE_ADDPAGE_LAYOUTSPINNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/XEMOBILE_ADDPAGE_SAVEBUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/newpage_button_save" />

</LinearLayout>