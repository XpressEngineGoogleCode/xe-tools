<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/XEMOBILE_BACK_BUTTON"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:background="@drawable/btn_action_bar_back"
        android:text="@string/actionbar_back" />

    <ImageView
        android:id="@+id/XEMOBILE_MENU_LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Dashboard application logo"
        android:src="@drawable/ic_launcher" />

    <Spinner
        android:id="@+id/XEMOBILE_MENU_SELECT_SITE"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>