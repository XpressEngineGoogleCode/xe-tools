<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/XEMOBILE_EDITOR_CONTENT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/XEMOBILE_EDITOR_BOLD"
            style="@style/btn_editor_toggle"
            android:textOff="@string/bold"
            android:textOn="@string/bold" />

        <ToggleButton
            android:id="@+id/XEMOBILE_EDITOR_ITALIC"
            style="@style/btn_editor_toggle"
            android:textOff="@string/italic"
            android:textOn="@string/italic" />

        <ToggleButton
            android:id="@+id/XEMOBILE_EDITOR_UNDERLINE"
            style="@style/btn_editor_toggle"
            android:textOff="@string/underline"
            android:textOn="@string/underline" />

        <Button
            android:id="@+id/XEMOBILE_EDITOR_LINK"
            style="@style/btn_editor"
            android:text="@string/link" />

        <Button
            android:id="@+id/XEMOBILE_EDITOR_ADD_IMAGE"
            style="@style/btn_editor"
            android:text="@string/add_image"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>