<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
     
    <LinearLayout 
        android:layout_weight="0.8"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
    <EditText        
        android:id="@+id/XEMOBILE_TEXTEDITOR_TITLE"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text=" "/>
	
	<EditText
	    android:layout_weight="0.3"
	    android:id="@+id/XEMOBILE_TEXTEDITOR_CONTENT"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"	    
	    android:gravity="top"
	    android:text=" "/>	
	        
	   
    <WebView
        android:layout_weight="0.3"
	    android:id="@+id/XEMOBILE_PREVIEW_CONTENT"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"    
	    />
		      
    </LinearLayout>
	
	<LinearLayout
	 	android:layout_width="fill_parent"
	 	android:layout_height="wrap_content"
	 	android:layout_weight="0.2">
	    
	    	<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_B"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="B"
	    android:onClick="boldButton"></Button>
	    
	    	<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_I"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="I"
	    android:onClick="italicButton"></Button>
	    	
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_U"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="U"
	    android:onClick="underlineButton"></Button>
	   		
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_STRIKE"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="STRIKE"
	    android:onClick="strikeButton"></Button>
	   		
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_LI"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="li"
	    android:onClick="liButton"></Button>
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_UL"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="ul"
	    android:onClick="ulButton"></Button>
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_DONE"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Done"
	    android:onClick="doneButton"></Button>
	   		<Button
	    android:id="@+id/XEMOBILE_TEXTEDITOR_CANCEL"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="X"
	    android:onClick="cancelButton"></Button>
	</LinearLayout>

    
</LinearLayout>